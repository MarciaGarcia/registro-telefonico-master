@{ 
    var controllerName = this.ViewContext.RouteData.GetRequiredString("controller");
}
<!--modalIncluir-->
<div class="modal fade" id="modalIncluir" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        
        <form action="/@controllerName/Incluir" method="post">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-plus"></i> Incluir Registro</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.Partial("~/Views/"+ controllerName +"/CamposComunsFormulario.cshtml")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>
